{% extends 'layout.html.twig' %}

{% block category_active %}active{% endblock %}

{% block content %}
<h2>All categories</h2>
<div class="text-end">
	<a href="{{path('category_new')}}">
		<button class="btn-success btn btn-sm">Add</button>
	</a>
</div>
<table class="table table-hover table-striped">
	<thead>
		<tr>
			<th class="text-right" scope="col">#</th>
			<th scope="col">Name</th>
			<th class="text-end" scope="col"></th>
		</tr>
	</thead>
	<tbody>
		{% for category in categories %}
		<tr>
			<th class="" scope="row">{{category.id}}</th>
			<td class="text-capitalize">{{category.label}}</td>
			<td class="text-end">
				<div class="btn-group" role="group" aria-label="Basic example">
					<a href="{{path('category_show', {'id': category.id})}}">
						<button type="button" class="btn btn-sm btn-primary">Show</button></a>
					<a href="{{path('category_edit', {'id': category.id})}}">
						<button type="button" class="btn btn-sm btn-secondary">Edit</button>
					</a>
					{% include "category/remove.html.twig" %}
				</div>
			</td>
		</tr>
		{% endfor %}
	</tbody>
</table>
{% endblock %}