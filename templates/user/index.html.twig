{% extends 'layout.html.twig' %}

{% block title %}User{% endblock %}
{% block user_active %}active{% endblock %}
{% block content %}
<h2>All users</h2>
<table class="table table-hover table-striped">
	<thead>
		<tr>
			<th class="text-right" scope="col">#</th>
			<th scope="col">Fullname</th>
			<th scope="col">Roles</th>
			<th scope="col">Email</th>
			<th scope="col">Birth</th>
			<th class="text-end" scope="col"></th>
		</tr>
	</thead>
	<tbody>
		{% for user in users %}
		<tr>
			<th class="" scope="row">{{user.id}}</th>
			<td><span class="text-capitalize">{{user.firstname}}</span> {{user.lastname|upper}}</td>
			<td class="text-uppercase">{{ user.roles | jsonArray}}</td>
			<td class="">{{ user.email}}</td>
			<td class="">{{ user.birth | date('Y/m/d')}}</td>
			<td class="text-end">
				<div class="btn-group" role="group" aria-label="Basic example">
					<a href="{{path('user_show', {'id': user.id})}}">
						<button type="button" class="btn btn-sm btn-primary">Show</button></a>
					<a href="{{path('user_edit', {'id': user.id})}}">
						<button type="button" class="btn btn-sm btn-secondary">Edit</button>
					</a>
					{% include "user/remove.html.twig" %}
				</div>
			</td>
		</tr>
		{% endfor %}
	</tbody>
</table>
{% endblock %}